<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>libESPER_V2</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>libESPER-V2</Title>
    <Authors>CdrSonan</Authors>
    <Version>0.1.0</Version>
    <Description>Second version of the ESPER library for speech and singing parametrization, modification, compression and recovery</Description>
    <PackageProjectUrl>https://nova-vox.org/esper</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/CdrSonan/libESPER-V2</RepositoryUrl>
    <PackageTags>speech;singing;tts;asr;vocoder;voice cloning;audio;pitch detection;library</PackageTags>
    <PackageReleaseNotes>Initial pre-release version; pending further testing.</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
  </ItemGroup>

</Project>
